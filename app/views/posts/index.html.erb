<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      <% if current_user %>
        <td><%= post.user.name %></td>
        <% end %>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 <% if current_user %>
<%= link_to "New Post", new_post_path %>
    <% end %>
